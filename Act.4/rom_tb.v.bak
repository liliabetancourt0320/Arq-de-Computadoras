module rom_tb;

    // Entradas para el módulo ROM
    reg [7:0] direccion;

    // Salidas del módulo ROM
    wire [7:0] dato_s;

    // Instancia del módulo ROM que se va a probar
    rom uut (
        .direccion(direccion),
        .dato_s(dato_s)
    );

    // Bloque inicial para la simulación
    initial begin
        // Inicialización de la señal de dirección
        direccion = 8'd0;

        // Mensaje para indicar el inicio de la simulación
        $display("Iniciando la simulación de la ROM...");

        // --- CASOS DE PRUEBA ---

        // Caso 1: Leer la dirección 0
        #10 direccion = 8'd0;
        #10 $display("Direccion: %d, Dato Leido: %d", direccion, dato_s);

        // Caso 2: Leer la dirección 3
        #10 direccion = 8'd3;
        #10 $display("Direccion: %d, Dato Leido: %d", direccion, dato_s);
        
        // Caso 3: Leer la dirección 5
        #10 direccion = 8'd5;
        #10 $display("Direccion: %d, Dato Leido: %d", direccion, dato_s);
        
        // Caso 4: Leer la dirección 8
        #10 direccion = 8'd8;
        #10 $display("Direccion: %d, Dato Leido: %d", direccion, dato_s);
        
        // Caso 5: Leer la dirección 10
        #10 direccion = 8'd10;
        #10 $display("Direccion: %d, Dato Leido: %d", direccion, dato_s);
        
        // Caso 6: Probar una dirección fuera de rango (debería devolver 'x')
        #10 direccion = 8'd15;
        #10 $display("Direccion: %d, Dato Leido: %d (fuera de rango)", direccion, dato_s);

        // Finalizar la simulación
        #10 $finish;
    end

endmodule

